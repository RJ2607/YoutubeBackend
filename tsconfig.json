{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src",
    "src/@types",
    "src/auth"
  ]
}